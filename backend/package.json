{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express server built with TypeScript and Nodemon for development",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node -r dotenv/config ./src/app.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/app.js",
    "build:watch": "tsc --watch",
    "seed": "ts-node -r dotenv/config ./src/database/seedUsers.ts",
    "package": "pkg ./dist/app.js --targets node18-linux-x64,node18-win-x64 --output dist/package/server"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.15.6",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "types": "./dist/app.d.ts"
}
